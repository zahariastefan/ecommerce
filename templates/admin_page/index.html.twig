{% extends 'base.html.twig' %}

{% block title %}Hello AdminPageController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">

    <form action="{{ path('admin_dashboard') }}" method="GET">
        <input type="text" name="searchTerm" placeholder="Search..."
               value="{{ app.request.query.get('searchTerm') }}"
        >
    </form>
    <div class="row profile_row_body">
        {% if orderedItems is empty %}
        {% else %}
            <div class="col refunded_orders">
                <h2 style="padding-top:100px">Comenzi De Livrat</h2>
                {% for orderedItem in orderedItems %}
                    {% for date, orderedItemArray in orderedItem %}
                        {% for orderedItemSingle in orderedItemArray %}
                            <strong> Data Plasarii Comenzii: {{ date }} </strong><br><br>
                            Product Title: {{ orderedItemSingle.product.title }} <br>
                            Quantity: {{ orderedItemSingle.quantity }} <br>
                            Address Delivery: {{ orderedItemSingle.address }} <br>
                            Phone: +40{{ orderedItemSingle.phone }} <br>
                            <button>Livrata</button>
                            <button>Anuleaza</button>
                            <button>Returneaza</button> <br><br><br>
                        {% endfor %}
                    {% endfor %}
                {% endfor %}
            </div>
        {% endif %}
    </div>

</div>
{% endblock %}
